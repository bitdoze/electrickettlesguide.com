---
import { Image } from 'astro:assets';
import { Icon } from 'astro-icon/components';
import { formatDate } from '@utils/date';

const { posts } = Astro.props;
const featuredPost = posts[0];
const secondaryPosts = posts.slice(1, 4);

const getSlug = (post) => {
  return post.data.canonical 
    ? new URL(post.data.canonical).pathname.split('/').filter(Boolean).pop()
    : post.slug;
};
---

<section class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 mb-16">
  <div class="text-center mb-10">
    <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-3">
      Featured Guides
    </h2>
    <p class="text-lg text-gray-600 dark:text-gray-300">
      Expert advice and in-depth reviews to help you blend better
    </p>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Main Featured Post -->
    {featuredPost && (
      <article class="lg:col-span-3 bg-white dark:bg-gray-800 rounded-2xl shadow-xl overflow-hidden group">
        <div class="flex flex-col lg:flex-row">
          <a href={`/${getSlug(featuredPost)}/`} class="lg:w-1/2 block overflow-hidden">
            {featuredPost.data.image && (
              <Image 
                src={featuredPost.data.image} 
                alt={featuredPost.data.title}
                class="w-full h-64 lg:h-full object-cover transition-transform duration-500 group-hover:scale-110"
                width={800}
                height={450}
              />
            )}
          </a>
          
          <div class="lg:w-1/2 p-6 lg:p-8 flex flex-col justify-center">
            <div class="flex flex-wrap gap-2 mb-4">
              {featuredPost.data.categories?.map((category: string) => (
                <span class="text-xs font-semibold px-3 py-1 bg-gradient-to-r from-green-500 to-emerald-600 text-white rounded-full">
                  {category}
                </span>
              ))}
            </div>
            
            <h3 class="text-2xl lg:text-3xl font-bold mb-3 text-gray-900 dark:text-white">
              <a href={`/${getSlug(featuredPost)}/`} class="hover:text-green-600 dark:hover:text-green-400 transition-colors">
                {featuredPost.data.title}
              </a>
            </h3>
            
            {featuredPost.data.description && (
              <p class="text-gray-600 dark:text-gray-300 mb-6 line-clamp-3">
                {featuredPost.data.description}
              </p>
            )}
            
            <div class="flex items-center gap-4 text-sm text-gray-500 dark:text-gray-400">
              {featuredPost.data.date && (
                <div class="flex items-center gap-1">
                  <Icon name="mdi:calendar" class="w-4 h-4" />
                  <time datetime={featuredPost.data.date.toISOString()}>
                    {formatDate(featuredPost.data.date)}
                  </time>
                </div>
              )}
              
              <a 
                href={`/${getSlug(featuredPost)}/`}
                class="ml-auto text-green-600 dark:text-green-400 font-semibold hover:text-green-700 dark:hover:text-green-300 flex items-center gap-1"
              >
                Read More <Icon name="mdi:arrow-right" class="w-4 h-4" />
              </a>
            </div>
          </div>
        </div>
      </article>
    )}

    <!-- Secondary Featured Posts -->
    {secondaryPosts.map((post) => (
      <article class="bg-white dark:bg-gray-800 rounded-xl shadow-lg overflow-hidden group hover:shadow-2xl transition-shadow flex flex-col">
        <a href={`/${getSlug(post)}/`} class="block overflow-hidden aspect-video">
          {post.data.image && (
            <Image 
              src={post.data.image} 
              alt={post.data.title}
              class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
              width={640}
              height={360}
            />
          )}
        </a>
        
        <div class="p-5 flex flex-col justify-between flex-grow">
          <div>
            {post.data.categories && post.data.categories.length > 0 && (
              <span class="inline-block text-xs font-semibold px-2 py-1 bg-blue-100 dark:bg-blue-900 text-blue-700 dark:text-blue-300 rounded mb-2">
                {post.data.categories[0]}
              </span>
            )}
            
            <h3 class="text-lg font-bold mb-2 text-gray-900 dark:text-white line-clamp-2">
              <a href={`/${getSlug(post)}/`} class="hover:text-green-600 dark:hover:text-green-400 transition-colors">
                {post.data.title}
              </a>
            </h3>
            
            {post.data.description && (
              <p class="text-sm text-gray-600 dark:text-gray-300 line-clamp-2 mb-3">
                {post.data.description}
              </p>
            )}
          </div>
          
          <div class="flex items-center justify-between text-xs text-gray-500 dark:text-gray-400 mt-auto">
            {post.data.date && (
              <time datetime={post.data.date.toISOString()}>
                {formatDate(post.data.date)}
              </time>
            )}
            
            <a 
              href={`/${getSlug(post)}/`}
              class="text-green-600 dark:text-green-400 font-semibold hover:text-green-700 flex items-center gap-1"
            >
              Read <Icon name="mdi:arrow-right" class="w-3 h-3" />
            </a>
          </div>
        </div>
      </article>
    ))}
  </div>
</section>
