---
import { Icon } from 'astro-icon/components';

const categories = [
  {
    name: 'Blender Reviews',
    slug: 'blenders',
    description: 'Find the perfect blender for your kitchen',
    icon: 'mdi:blender',
    color: 'from-blue-500 to-cyan-500',
    count: '50+'
  },
  {
    name: 'Smoothie Recipes',
    slug: 'recipes',
    description: 'Delicious and healthy smoothie recipes',
    icon: 'mdi:fruit-cherries',
    color: 'from-pink-500 to-rose-500',
    count: '100+'
  },
  {
    name: 'Buying Guides',
    slug: 'guides',
    description: 'Expert advice on choosing equipment',
    icon: 'mdi:book-open-variant',
    color: 'from-green-500 to-emerald-500',
    count: '30+'
  },
  {
    name: 'Tips & Tricks',
    slug: 'lifestyle',
    description: 'Get the most from your blender',
    icon: 'mdi:lightbulb-on',
    color: 'from-amber-500 to-orange-500',
    count: '40+'
  }
];
---

<section class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 mb-16">
  <div class="text-center mb-10">
    <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-3">
      Browse by Category
    </h2>
    <p class="text-lg text-gray-600 dark:text-gray-300">
      Explore our comprehensive guides and reviews
    </p>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
    {categories.map((category) => (
      <a 
        href={`/categories/${category.slug}/`}
        class="group relative bg-white dark:bg-gray-800 rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 overflow-hidden"
      >
        <div class={`absolute inset-0 bg-gradient-to-br ${category.color} opacity-0 group-hover:opacity-10 transition-opacity duration-300`}></div>
        
        <div class="relative p-6 flex flex-col items-center text-center">
          <div class={`w-16 h-16 rounded-full bg-gradient-to-br ${category.color} flex items-center justify-center mb-4 transform group-hover:scale-110 transition-transform duration-300`}>
            <Icon name={category.icon} class="w-8 h-8 text-white" />
          </div>
          
          <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">
            {category.name}
          </h3>
          
          <p class="text-sm text-gray-600 dark:text-gray-300 mb-3">
            {category.description}
          </p>
          
          <div class="inline-flex items-center gap-1 text-sm font-semibold text-gray-500 dark:text-gray-400">
            <span>{category.count} articles</span>
            <Icon name="mdi:arrow-right" class="w-4 h-4 transform group-hover:translate-x-1 transition-transform" />
          </div>
        </div>
      </a>
    ))}
  </div>
</section>
