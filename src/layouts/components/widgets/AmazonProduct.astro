---
export interface Props {
  productName: string;
  productDescription: string;
  productFeatures: string[];
  productLink: string;
  productImage: string;
  productRating: number; // Rating out of 5
  importantConsiderations?: string[];
  pros?: string[];
  cons?: string[];
}

const { 
  productName, 
  productDescription, 
  productFeatures, 
  productLink, 
  productImage, 
  productRating, 
  importantConsiderations,
  pros,
  cons
} = Astro.props;

// Add affiliate tag to the product link
const affiliateLink = productLink.includes('?') 
  ? `${productLink}&tag=smoothieblender00-20`
  : `${productLink}?tag=smoothieblender00-20`;

// Generate star rating display
const fullStars = Math.floor(productRating);
const hasHalfStar = productRating % 1 !== 0;
const emptyStars = 5 - Math.ceil(productRating);
---

<div class="amazon-product-card not-prose my-8 bg-gradient-to-br from-white to-gray-50 dark:from-gray-800 dark:to-gray-900 rounded-2xl shadow-xl border border-gray-100 dark:border-gray-600 overflow-hidden hover:shadow-2xl transition-all duration-300">
  <!-- Product Header -->
  <div class="p-8">
    <div class="flex flex-col lg:flex-row gap-6">
      <!-- Product Image -->
      <div class="lg:w-1/3 flex-shrink-0">
        <a href={affiliateLink} target="_blank" rel="noopener noreferrer" class="block">
          <img 
            src={productImage} 
            alt={productName}
            class="w-full h-64 lg:h-48 object-contain bg-gradient-to-br from-gray-50 to-white dark:from-gray-700 dark:to-gray-600 rounded-xl hover:scale-105 transition-transform duration-300 shadow-md border border-gray-100 dark:border-gray-600"
            loading="lazy"
            crossorigin="anonymous"
            referrerpolicy="no-referrer-when-downgrade"
          />
        </a>
      </div>
      
      <!-- Product Info -->
      <div class="lg:w-2/3 flex flex-col justify-between">
        <div>
          <!-- Product Name -->
          <h3 class="text-xl lg:text-2xl font-bold bg-gradient-to-r from-gray-900 to-gray-700 dark:from-white dark:to-gray-200 bg-clip-text text-transparent mb-3">
            {productName}
          </h3>
          
          <!-- Rating -->
          <div class="flex items-center mb-3">
            <div class="flex items-center">
              {Array.from({length: fullStars}).map(() => (
                <svg class="w-5 h-5 text-yellow-400 fill-current" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                </svg>
              ))}
              {hasHalfStar && (
                <svg class="w-5 h-5 text-yellow-400" viewBox="0 0 20 20">
                  <defs>
                    <linearGradient id="half-fill">
                      <stop offset="50%" stop-color="currentColor"/>
                      <stop offset="50%" stop-color="transparent"/>
                    </linearGradient>
                  </defs>
                  <path fill="url(#half-fill)" d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                </svg>
              )}
              {Array.from({length: emptyStars}).map(() => (
                <svg class="w-5 h-5 text-gray-300 dark:text-gray-600" viewBox="0 0 20 20">
                  <path fill="currentColor" d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                </svg>
              ))}
            </div>
            <span class="ml-2 text-sm font-medium text-gray-600 dark:text-gray-400">
              {productRating}/5
            </span>
          </div>
          
          <!-- Product Description -->
          <p class="text-gray-700 dark:text-gray-300 mb-4 leading-relaxed">
            {productDescription}
          </p>
        </div>
        
        <!-- CTA Button -->
        <div class="mt-4">
          <a 
            href={affiliateLink} 
            target="_blank" 
            rel="noopener noreferrer"
            class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-orange-500 to-orange-600 hover:from-orange-600 hover:to-orange-700 text-white font-semibold rounded-xl transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5"
          >
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path d="M3 1a1 1 0 000 2h1.22l.305 1.222a.997.997 0 00.01.042l1.358 5.43-.893.892C3.74 11.846 4.632 14 6.414 14H15a1 1 0 000-2H6.414l1-1H14a1 1 0 00.894-.553l3-6A1 1 0 0017 3H6.28l-.31-1.243A1 1 0 005 1H3zM16 16.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0zM6.5 18a1.5 1.5 0 100-3 1.5 1.5 0 000 3z"/>
            </svg>
            Check Price on Amazon
          </a>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Product Features -->
  {productFeatures && productFeatures.length > 0 && (
    <div class="px-8 py-6 bg-gradient-to-r from-blue-50 to-indigo-50 dark:from-blue-900/20 dark:to-indigo-900/20 border-t border-blue-100 dark:border-blue-800/50">
      <h4 class="text-lg font-semibold bg-gradient-to-r from-blue-700 to-indigo-700 dark:from-blue-300 dark:to-indigo-300 bg-clip-text text-transparent mb-4 flex items-center">
        <svg class="w-5 h-5 mr-2 text-blue-600 dark:text-blue-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" clip-rule="evenodd"/>
        </svg>
        Key Features
      </h4>
      <ul class="space-y-2">
        {productFeatures.map((feature) => (
          <li class="flex items-start">
            <svg class="w-5 h-5 text-green-500 mt-0.5 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <span class="text-gray-700 dark:text-gray-300">{feature}</span>
          </li>
        ))}
      </ul>
    </div>
  )}
  
  <!-- Pros and Cons -->
  {((pros && pros.length > 0) || (cons && cons.length > 0)) && (
    <div class="px-8 py-6 bg-gradient-to-r from-emerald-50 via-gray-50 to-red-50 dark:from-emerald-900/10 dark:via-gray-800 dark:to-red-900/10 border-t border-gray-200 dark:border-gray-600">
      <h4 class="text-lg font-semibold bg-gradient-to-r from-emerald-700 via-gray-700 to-red-700 dark:from-emerald-300 dark:via-gray-300 dark:to-red-300 bg-clip-text text-transparent mb-6 flex items-center justify-center">
        <svg class="w-5 h-5 mr-2 text-gray-600 dark:text-gray-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"/>
        </svg>
        Pros & Cons Analysis
      </h4>
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        
        <!-- Pros Section -->
        {pros && pros.length > 0 && (
          <div class="space-y-3 bg-gradient-to-br from-emerald-50 to-green-50 dark:from-emerald-900/20 dark:to-green-900/20 p-4 rounded-xl border border-emerald-200 dark:border-emerald-800/50">
            <h5 class="text-md font-semibold text-emerald-700 dark:text-emerald-400 flex items-center mb-3">
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              Pros
            </h5>
            <ul class="space-y-2">
              {pros.map((pro) => (
                <li class="flex items-start">
                  <svg class="w-4 h-4 text-green-500 mt-1 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                  <span class="text-gray-700 dark:text-gray-300 text-sm">{pro}</span>
                </li>
              ))}
            </ul>
          </div>
        )}
        
        <!-- Cons Section -->
        {cons && cons.length > 0 && (
          <div class="space-y-3 bg-gradient-to-br from-red-50 to-rose-50 dark:from-red-900/20 dark:to-rose-900/20 p-4 rounded-xl border border-red-200 dark:border-red-800/50">
            <h5 class="text-md font-semibold text-red-700 dark:text-red-400 flex items-center mb-3">
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
              </svg>
              Cons
            </h5>
            <ul class="space-y-2">
              {cons.map((con) => (
                <li class="flex items-start">
                  <svg class="w-4 h-4 text-red-500 mt-1 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
                  </svg>
                  <span class="text-gray-700 dark:text-gray-300 text-sm">{con}</span>
                </li>
              ))}
            </ul>
          </div>
        )}
        
      </div>
    </div>
  )}
  
  <!-- Important Considerations -->
  {importantConsiderations && importantConsiderations.length > 0 && (
    <div class="px-8 py-6 bg-gradient-to-r from-amber-50 to-yellow-50 dark:from-amber-900/20 dark:to-yellow-900/20 border-t border-amber-200 dark:border-amber-800">
      <h4 class="text-lg font-semibold bg-gradient-to-r from-amber-700 to-yellow-700 dark:from-amber-300 dark:to-yellow-300 bg-clip-text text-transparent mb-4 flex items-center">
        <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
        </svg>
        Important Considerations
      </h4>
      <ul class="space-y-2">
        {importantConsiderations.map((consideration) => (
          <li class="flex items-start">
            <span class="text-yellow-700 dark:text-yellow-300 text-sm mr-2 mt-1">â€¢</span>
            <span class="text-yellow-700 dark:text-yellow-300 text-sm">{consideration}</span>
          </li>
        ))}
      </ul>
    </div>
  )}
  
  <!-- Disclaimer -->
  <div class="px-8 py-4 bg-gradient-to-r from-gray-100 to-gray-200 dark:from-gray-800 dark:to-gray-900 border-t border-gray-300 dark:border-gray-600">
    <p class="text-xs text-gray-600 dark:text-gray-400 text-center">
      <strong class="text-gray-700 dark:text-gray-300">Disclosure:</strong> This post contains affiliate links. We may earn a commission if you purchase through these links at no additional cost to you.
    </p>
  </div>
</div>
