---
import { getCollection } from "astro:content";
import Layout from "@layouts/Layout.astro";
import PostCard from "@components/blog/PostCard.astro";
import FeaturedArticles from "@components/blog/FeaturedArticles.astro";
import CategoryShowcase from "@components/blog/CategoryShowcase.astro";
import CallToAction from "@components/widgets/CallToAction.astro";
import { siteConfig } from "@config/site";
import { Icon } from 'astro-icon/components';

// Get all blog posts and sort by date (newest first)
const posts = await getCollection("posts", ({ data }) => {
  return !data.draft;
});

// Sort posts by date (newest first)
const sortedPosts = posts.sort((a, b) => {
  return (
    new Date(b.data.date || 0).getTime() - new Date(a.data.date || 0).getTime()
  );
});

// Get featured posts for hero section
const featuredPosts = sortedPosts.slice(0, 4);

// Get latest posts for the bottom section
const latestPosts = sortedPosts.slice(4, 10);
---

<Layout
  title={siteConfig.title}
  description={siteConfig.description}
  wideContent={true}
>
  <main class="w-full">
    <!-- Hero Section with Branding -->
    <section class="bg-gradient-to-br from-green-50 via-emerald-50 to-teal-50 dark:from-gray-900 dark:via-gray-800 dark:to-gray-900 py-16 md:py-24">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold leading-tight mb-6">
          <span class="text-gray-900 dark:text-white">Your Guide to</span>
          <span class="block bg-clip-text text-transparent bg-gradient-to-r from-green-500 via-emerald-500 to-teal-600">
            Electric Kettles
          </span>
        </h1>
        
        <p class="text-xl md:text-2xl text-gray-600 dark:text-gray-300 mb-8 max-w-3xl mx-auto">
          Expert reviews, buying guides, and practical tips to help you choose the perfect electric kettle for your needs and enjoy the perfect cup every time.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
          <a
            href="/categories/reviews/"
            class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-white bg-gradient-to-r from-green-500 to-emerald-600 rounded-lg hover:from-green-600 hover:to-emerald-700 shadow-lg hover:shadow-xl transition-all transform hover:-translate-y-0.5"
          >
            <Icon name="mdi:star" class="w-6 h-6 mr-2" />
            Best Kettles 2025
          </a>
          
          <a
            href="/categories/guides/"
            class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-gray-900 dark:text-white bg-white dark:bg-gray-800 border-2 border-gray-300 dark:border-gray-600 rounded-lg hover:border-green-500 dark:hover:border-green-500 transition-all transform hover:-translate-y-0.5"
          >
            <Icon name="mdi:book-open-variant" class="w-6 h-6 mr-2" />
            Buying Guides
          </a>
        </div>
        
        <!-- Trust Indicators -->
        <div class="flex flex-wrap justify-center gap-8 text-center">
          <div>
            <div class="text-3xl font-bold text-gray-900 dark:text-white">50+</div>
            <div class="text-sm text-gray-600 dark:text-gray-400">Kettle Reviews</div>
          </div>
          <div>
            <div class="text-3xl font-bold text-gray-900 dark:text-white">100+</div>
            <div class="text-sm text-gray-600 dark:text-gray-400">Helpful Guides</div>
          </div>
          <div>
            <div class="text-3xl font-bold text-gray-900 dark:text-white">10k+</div>
            <div class="text-sm text-gray-600 dark:text-gray-400">Monthly Readers</div>
          </div>
        </div>
      </div>
    </section>

    <div class="py-12 md:py-16">
      <!-- Featured Articles -->
      <FeaturedArticles posts={featuredPosts} />

      <!-- Category Showcase -->
      <CategoryShowcase />

      <!-- Call to Action -->
      <CallToAction />

      <!-- Latest Articles Grid -->
      <section class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center mb-10">
          <div>
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-2">
              Latest Articles
            </h2>
            <p class="text-gray-600 dark:text-gray-300">
              Fresh content to help you choose and use electric kettles
            </p>
          </div>
          <a
            href="/blog/"
            class="hidden sm:flex items-center gap-2 text-green-600 dark:text-green-400 hover:text-green-700 dark:hover:text-green-300 font-semibold text-lg group"
          >
            View All
            <Icon name="mdi:arrow-right" class="w-5 h-5 transform group-hover:translate-x-1 transition-transform" />
          </a>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
          {latestPosts.map((post) => <PostCard post={post} />)}
        </div>

        <div class="text-center">
          <a
            href="/blog/"
            class="inline-flex items-center gap-2 px-6 py-3 text-green-600 dark:text-green-400 hover:text-green-700 dark:hover:text-green-300 font-semibold border-2 border-green-600 dark:border-green-400 rounded-lg hover:bg-green-50 dark:hover:bg-gray-800 transition-all"
          >
            Explore All Articles
            <Icon name="mdi:arrow-right" class="w-5 h-5" />
          </a>
        </div>
      </section>
    </div>
  </main>
</Layout>
